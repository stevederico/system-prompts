{
  "rules": {
    "max_lines_per_component": 200,
    "max_function_lines": 40,
    "max_parameters": 3,
    "naming": {
      "variables": "camelCase",
      "functions": "camelCase",
      "constants": "UPPER_CASE"
    },
    "structure": {
      "no_deep_nesting": 3,
      "use_early_returns": true
    },
    "comments": {
      "require_function_comments": true
    },
    "errors": {
      "require_try_catch": true
    }
  }
}
